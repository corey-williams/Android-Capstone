<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioButton
        android:id="@+id/radioRangedArmour"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Armour" />

    <RadioButton
        android:id="@+id/radioRangedWeapons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/radioRangedArmour"
        android:text="Weapons &amp; Spells" />

    <ListView
        android:id="@+id/rangedArmourList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textQuest"
        android:visibility="visible" >

    </ListView>

    <ListView
        android:id="@+id/rangedWeaponsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textQuest"
        android:visibility="invisible" >

    </ListView>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textQuest"
        android:visibility="invisible" >

    </ListView>

    <TextView
        android:id="@+id/textQuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioRangedArmour"
        android:text="Gold: " />

    <TextView
        android:id="@+id/goldRangedFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textQuest"
        android:layout_alignRight="@+id/radioRangedWeapons"
        android:layout_below="@+id/radioRangedArmour"
        android:layout_toRightOf="@+id/textQuest"
        android:text="TextView" />

</RelativeLayout>
