<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioButton
        android:id="@+id/radioSpellcasterArmour"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Armour" />

    <RadioButton
        android:id="@+id/radioSpellcasterWeapons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/radioSpellcasterArmour"
        android:text="Weapons" />

    <ListView
        android:id="@+id/spellcasterArmourList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textQuest" >
    </ListView>

    <ListView
        android:id="@+id/spellcasterWeaponsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/spellcasterArmourList"
        android:visibility="gone" >

    </ListView>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/spellcasterArmourList"
        android:visibility="gone" >

    </ListView>

    <TextView
        android:id="@+id/textQuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioSpellcasterArmour"
        android:text="Gold: " />

    <TextView
        android:id="@+id/goldSpellcasterFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spellcasterArmourList"
        android:layout_alignRight="@+id/radioSpellcasterWeapons"
        android:layout_below="@+id/radioSpellcasterArmour"
        android:layout_toRightOf="@+id/textQuest" />

    <RadioButton
        android:id="@+id/radioSpellcasterSpells"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/radioSpellcasterWeapons"
        android:text="Spells" />

</RelativeLayout>
